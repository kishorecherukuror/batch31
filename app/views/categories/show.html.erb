<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% i  = 1 %>
    <% @category.products.each do |category| %>
      <tr>
      	<td><%= i%></td>
      	<% i += 1 %>
        <td><%= category.name %></td>
        <td><%= category.price %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
