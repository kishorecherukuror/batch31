<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :teacher_id %><br>
    <%= select_tag "teacher", options_from_collection_for_select(Teacher.all, "id", "fname"), :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :student_id %><br>
    <%= select_tag "student", options_from_collection_for_select(Student.all, "id", "name"), :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
